{
  "name": "prevent_translation_of_code_tags",
  "version": "1.0",
  "description": "Adds a custom attribute to code tags on page load",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at" : "document_end",
      "all_frames": true
    }
  ]
}
